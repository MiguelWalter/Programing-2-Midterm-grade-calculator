        <!-- Section Container for Lecture and Laboratory -->
        <div class="section-container">
            <!-- Lecture Form -->
            <div class="section">
                <h2>Lecture Prelim Grade</h2>
                <form id="lectureForm">
                    <label for="prelimExam">Prelim Exam:</label>
                    <input type="number" id="prelimExam" placeholder="Enter Prelim Exam Score (0-100)" required><br>

                    <label for="essay">Essay:</label>
                    <input type="number" id="essay" placeholder="Enter Essay Score (0-100)" required><br>

                    <label for="pvm">PVM:</label>
                    <input type="number" id="pvm" placeholder="Enter PVM Score (0-100)" required><br>

                    <label for="javaBasics">Java Basics:</label>
                    <input type="number" id="javaBasics" placeholder="Enter Java Basics Score (0-100)" required><br>

                    <label for="introJs">Intro to JS:</label>
                    <input type="number" id="introJs" placeholder="Enter Intro to JS Score (0-100)" required><br>

                    <label for="lectureAbsences">Lecture Absences:</label>
                    <input type="number" id="lectureAbsences" placeholder="Enter Number of Absences" required><br>

                    <button type="button" onclick="calculateLectureGrade()">Calculate Lecture Grade</button>
                </form>

                <div class="result">
                    Lecture Prelim Grade: <span id="lectureGrade">N/A</span>
                </div>
                <div id="lectureMessage" class="message"></div>
                <div id="lectureComputation" class="computation"></div>
            </div>

            <!-- Laboratory Form -->
            <div class="section">
                <h2>Laboratory Prelim Grade</h2>
                <form id="labForm">
                    <label for="java1">Java 1:</label>
                    <input type="number" id="java1" placeholder="Enter Java 1 Score (0-100)" required><br>

                    <label for="java2">Java 2:</label>
                    <input type="number" id="java2" placeholder="Enter Java 2 Score (0-100)" required><br>

                    <label for="js1">JS1:</label>
                    <input type="number" id="js1" placeholder="Enter JS1 Score (0-100)" required><br>

                    <label for="js2">JS2:</label>
                    <input type="number" id="js2" placeholder="Enter JS2 Score (0-100)" required><br>

                    <label for="mp1">MP1:</label>
                    <input type="number" id="mp1" placeholder="Enter MP1 Score (0-100)" required><br>

                    <label for="mp2">MP2:</label>
                    <input type="number" id="mp2" placeholder="Enter MP2 Score (0-100)" required><br>

                    <label for="mp3">MP3:</label>
                    <input type="number" id="mp3" placeholder="Enter MP3 Score (0-100)" required><br>

                    <label for="mp3Docu">MP3 (Documentation):</label>
                    <input type="number" id="mp3Docu" placeholder="Enter MP3 Documentation Score (0-100)" required><br>

                    <label for="labAbsences">Lab Absences:</label>
                    <input type="number" id="labAbsences" placeholder="Enter Number of Lab Absences" required><br>

                    <button type="button" onclick="calculateLabGrade()">Calculate Lab Grade</button>
                </form>

                <div class="result">
                    Laboratory Prelim Grade: <span id="labGrade">N/A</span>
                </div>
                <div id="labMessage" class="message"></div>
